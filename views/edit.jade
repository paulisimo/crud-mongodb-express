form( method="post", action="/posts/" + post._id)
    div
        div
            span Title :
            input( name="title", rows=2, id="editArticleTitle")
              !{ post.title }
        div
            span Body :
            textarea( name="body", rows=10, id="editArticleBody")
              !{ post.body }
        div 
        div#editArticleSubmit
            input( type="submit", value="Send")